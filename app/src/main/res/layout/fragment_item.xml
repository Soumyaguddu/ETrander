<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:background-color="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greyLight"
    android:orientation="vertical">

    <include
        android:id="@+id/include"
        layout="@layout/header_main_item" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/firstCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_marginBottom="@dimen/_5ssp"

                    app:cardCornerRadius="@dimen/_5ssp"
                    app:cardElevation="@dimen/_5ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5ssp">

                        <LinearLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@color/lightGrey"
                            android:padding="@dimen/_1ssp">

                            <com.senso.e_trader.helper.SquareImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30ssp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/sand" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_5ssp"
                                android:gravity="center|left"
                                android:padding="@dimen/_2ssp"
                                android:text="@string/sand"
                                android:textAppearance="@style/textFormat" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_2ssp"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:background="@drawable/square_share_background"
                                    android:backgroundTint="@color/themeColor"
                                    android:text="Rate" />

                                <Button
                                    android:id="@+id/btnBook"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_2ssp"
                                    android:layout_weight="1"
                                    android:background="@drawable/square_share_background"
                                    android:text="Book" />


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/SecondCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_marginBottom="@dimen/_5ssp"


                    app:cardCornerRadius="@dimen/_5ssp"
                    app:cardElevation="@dimen/_5ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5ssp">

                        <LinearLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@color/lightGrey"
                            android:padding="@dimen/_1ssp">

                            <com.senso.e_trader.helper.SquareImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30ssp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/stone" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_5ssp"
                                android:gravity="center|left"
                                android:padding="@dimen/_2ssp"
                                android:text="@string/stoneChips"
                                android:textAppearance="@style/textFormat" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_2ssp"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:background="@drawable/square_share_background"
                                    android:backgroundTint="@color/themeColor"
                                    android:text="Rate" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_2ssp"
                                    android:layout_weight="1"
                                    android:background="@drawable/square_share_background"
                                    android:text="Book" />


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:id="@+id/ThirdCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5ssp"
                    android:layout_marginEnd="@dimen/_5ssp"
                    android:layout_marginBottom="@dimen/_5ssp"

                    app:cardCornerRadius="@dimen/_5ssp"
                    app:cardElevation="@dimen/_5ssp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5ssp">

                        <LinearLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@color/lightGrey"
                            android:padding="@dimen/_1ssp">

                            <com.senso.e_trader.helper.SquareImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_30ssp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:src="@drawable/steel" />


                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="@dimen/_5ssp"
                                android:gravity="center|left"
                                android:padding="@dimen/_2ssp"
                                android:text="@string/steel"
                                android:textAppearance="@style/textFormat" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_alignParentEnd="true"
                                android:orientation="vertical"
                                android:weightSum="2">

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_2ssp"
                                    android:layout_weight="1"
                                    android:textColor="@color/white"
                                    android:background="@drawable/square_share_background"
                                    android:backgroundTint="@color/themeColor"
                                    android:text="Rate" />

                                <Button
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_margin="@dimen/_2ssp"
                                    android:layout_weight="1"
                                    android:background="@drawable/square_share_background"
                                    android:text="Book" />


                            </LinearLayout>

                        </RelativeLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>




            </LinearLayout>




        </LinearLayout>


    </ScrollView>


</LinearLayout>